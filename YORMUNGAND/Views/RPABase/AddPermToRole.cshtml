@model IEnumerable<ThreeString>
<div>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            function handleShape(e) {
                console.log("")
                console.log($(e.target)[0].checked)
                if ($(e.target)[0].checked) {
                    var data = { role: "@ViewBag.Role", perm: $(e.target).val()}
                    $.ajax({
                        url: '@Url.Action("AddPermToRole", "TestApi")',
                        type: "POST",
                        data: data,
                    }).done(function (resp) {
                        alert("Success! " + resp);
                        setEvents();
                    }).error(function (err) {
                        alert("Error! " + err.status);
                    });
                } else {
                    var data = { role: "@ViewBag.Role", perm: $(e.target).val()}
                    $.ajax({
                        url: '@Url.Action("DeletePermFromRole", "TestApi")',
                        type: "POST",
                        data: data,
                    }).done(function (resp) {
                        alert("Success! " + resp);
                        setEvents();
                    }).error(function (err) {
                        alert("Error! " + err.status);
                    });

                }
            };
            $(".shape-bar, .brand").controlgroup();
            $("[name='shape']").on("change", handleShape);
        });
    </script>
    <div>
        <h2>Выбрать права для роли @ViewBag.RoleDesc</h2>
        <div class="shape-wrap">
            <fieldset class="shape-bar">
                @foreach (ThreeString _ts in Model)
                {
                    <label for="@_ts.one">@_ts.two</label>
                    <input type="checkbox" name="shape" id="@_ts.one" value="@_ts.one" @_ts.three>
                }
            </fieldset>
        </div>
    </div>
</div>
